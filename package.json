      "name": "Eyal Atias"
    },
    {
      "name": "Leorah Ross"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ross-sec/kokoro_mcp_server.git"
  },
  "bugs": {
    "url": "https://github.com/ross-sec/kokoro_mcp_server/issues"
  },
  "homepage": "https://github.com/ross-sec/kokoro_mcp_server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.21.2",
    "kokoro-js": "^1.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
