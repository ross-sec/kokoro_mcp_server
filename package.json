{
  "name": "@ross_tchnologies/kokoro-tts-mcp-server",
  "version": "1.0.2",
  "description": "Model Context Protocol (MCP) server for Kokoro text-to-speech with female voice. 100% local, no Python required. Supports SSE and stdio transports.",
  "main": "dist/index.js",
  "bin": {
    "kokoro-tts-mcp": "./bin/kokoro-tts-mcp.js"
  },
  "type": "module",
  "files": [
    "dist",
    "bin",
    "LICENSE",
    "README.md",
    "mcp.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node tests/test-tts.js",
    "check-deps": "bash scripts/check-dependencies.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "tts",
    "text-to-speech",
    "kokoro",
    "speech-synthesis",
    "voice-synthesis",
    "ai-voice",
    "ross-technologies"
  ],
